<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/background_in_mediaplayer"
    app:cardBackgroundColor="@color/background_in_mediaplayer"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_in_mediaplayer"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/album"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/background_in_mediaplayer"
            android:scaleType="fitXY" />

        <TextView

            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/background_in_mediaplayer"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:textColor="@color/text_in_playlists_creation"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="Best songs 2021" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/background_in_mediaplayer">

            <TextView
                android:id="@+id/number_of_tracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background_in_mediaplayer"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:textColor="@color/text_in_playlists_creation"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="98" />

            <TextView
                android:id="@+id/text_tracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background_in_mediaplayer"
                android:ellipsize="end"
                android:text="@string/tracks"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:textColor="@color/text_in_playlists_creation"
                android:textSize="12sp"
                android:textStyle="normal"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>